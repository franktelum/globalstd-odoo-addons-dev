<?xml version="1.0" encoding="utf-8"?>
<openerp>
   <data>

      <record id="gpsi_product_view_form" model="ir.ui.view">
         <field name="name">gpsi.product.form</field>
         <field name="model">gpsi.product</field>
         <field name="arch" type="xml">
            <form string="Product">
               <sheet>
                  <div class="oe_title">
                     <h1>
                         <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : 1}"/>
                     </h1>
                  </div>
                  <group>
                     <field name="name" />
                     <field name="price" />
                     <field name="description" />
                  </group>
               </sheet>
            </form>
         </field>
      </record>

   </data>
</openerp>
