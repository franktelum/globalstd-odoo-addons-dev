         domain="[('gsos_user_ids', 'in', [uid])]"
         view_mode="kanban,tree,form">
      </act_window>

      <act_window id="action_gsos_user_invitations"
         name="Invitations"
         res_model="gsos.invitation"
         domain="[('gsos_user_ids', 'in', [uid])]"
